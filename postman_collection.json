{
  "info": {
    "name": "Task Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Team",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-api-key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Development Team\", \"members\": [{\"name\": \"John Doe\", \"email\": \"john@example.com\"}, {\"name\": \"Jane Smith\", \"email\": \"jane@example.com\"}]}"
        },
        "url": {
          "raw": "{{base_url}}/teams",
          "host": ["{{base_url}}"],
          "path": ["teams"]
        }
      }
    },
    {
      "name": "Get Teams",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/teams",
          "host": ["{{base_url}}"],
          "path": ["teams"]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-api-key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"description\": \"Implement login feature\", \"dueDate\": \"2025-11-30\", \"assigneeId\": 1}"
        },
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": ["{{base_url}}"],
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Get Tasks",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": ["{{base_url}}"],
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-api-key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"status\": \"in_progress\"}"
        },
        "url": {
          "raw": "{{base_url}}/tasks/1",
          "host": ["{{base_url}}"],
          "path": ["tasks", "1"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "api_key",
      "value": "your-secret-api-key-12345"
    }
  ]
}