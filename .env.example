# Environment Variables for Task Management API

# Bearer Token for API Authentication
BEARER_TOKEN=your-secret-bearer-token-12345

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_db_username
